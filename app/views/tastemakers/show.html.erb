<div class = "col-md-7">
</br></br>
<h1><%="Tastemaker: #{@tastemaker.tastemaker_full_name}"%></h1>
<h2><%="Username: #{@tastemaker.tastemaker_instagram_username}"%></h1>
<p> <%="Instagram ID: #{@tastemaker.tastemaker_instagram_id}"%> </p>

</div>



<div class = "col-md-5">
</br></br>
                    <p> <%= simple_form_for @tastemaker do |f| %>
                        <p> <%= f.input :tastemaker_influence_score %> </p>
                        <p> <%= f.input :fashion_tastemaker %> </p>
                        <p> <%= f.input :elite_tastemaker %> </p>
                        <p> <%= f.submit %> </p>
                    <% end %>
</div>

	<% @posts.each do |indiv_post| %>
    	<div class ="row">
    		<div class = "col-md-5">
    				<%= link_to instagram_path(indiv_post) do %> 
              <%= image_tag "#{indiv_post.photo_standard_res}" %>
            <% end %>
    		</div>
    		<div class = "col-md-7">
  				<div class = "row">
                    <p> <%= "Number of likes #{indiv_post.likes}"%> </p>
                    <p> <%= "Number of comments #{indiv_post.comment_count}"%> </p>
  				</div>

                <div class = "row">
                    <p> <%= link_to indiv_post.link, indiv_post.link%> </p>
                </div>


  				<div class = "row"> 
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Comment</th>
                        <th>Username</th>
                        <th>Confirmed?</th>
                    </tr>
                </thead>
                <tbody>
                  <% indiv_post.comments.each do |individ_comment| %>
                    <tr>
                        <td> <%= individ_comment.text_field%>       </td>
                        <td> <%= individ_comment.tastemaker.tastemaker_instagram_username%> </td>
                        <td> <%= individ_comment.confirmed_comment%>  </td>
                    </tr>
                    <%end%>
                </tbody>
            </table>

            <%#= render 'comments'%> 
  				</div>
    		</div>
    	</div>
    </br></br></br>
<%end%>
<%= @posts.count%>
