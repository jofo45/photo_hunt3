<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Comment</th>
            <th>Comment Score</th>
            <th>Confirmed?</th>
        </tr>
    </thead>
    <tbody>
    	<% @post.comments.each do |individ_comment| %>
        <tr>
            <td> <%= individ_comment.text_field%> 			</td>
            <td> <%= individ_comment.comment_score%> 		</td>
            <td> <%= individ_comment.confirmed_comment%>	</td>
        </tr>
        <%end%>
    </tbody>
</table>

